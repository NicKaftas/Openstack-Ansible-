# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto ens1f0
iface ens1f0 inet static
        address 10.1.0.21
        netmask 255.255.0.0
        network 10.1.0.0
        broadcast 10.1.255.255
        gateway 10.1.0.20
        # dns-* options are implemented by the resolvconf package, if installed
        dns-nameservers 8.8.8.8
# The public interface
auto ens1f1
iface ens1f1 inet manual

# Container/Host management VLAN interface
auto ens1f0.110
iface ens1f0.110 inet manual
    vlan-raw-device ens1f0

# OpenStack Networking VXLAN (tunnel/overlay) VLAN interface
auto ens1f0.120
iface ens1f0.120 inet manual
    vlan-raw-device ens1f0

# Storage network VLAN interface (optional)
auto ens1f0.130
iface ens1f0.130 inet manual
    vlan-raw-device ens1f0

# Container/Host management bridge
auto br-mgmt
iface br-mgmt inet static
    bridge_stp off
    bridge_waitport 0
    bridge_fd 0
    bridge_ports ens1f0.110
    address 10.1.110.2
    netmask 255.255.255.0
    dns-nameservers 8.8.8.8 8.8.4.4
# OpenStack Networking VXLAN (tunnel/overlay)  bridge
auto br-vxlan
iface br-vxlan inet manual
    bridge_stp off
    bridge_waitport 0
    bridge_fd 0
    bridge_ports ens1f0.120
# OpenStack Networking VLAN bridge</font>
auto br-vlan
iface br-vlan inet manual
    bridge_stp off
    bridge_waitport 0
    bridge_fd 0
    bridge_ports ens1f1
# Storage bridge (optional)</font>
auto br-storage
iface br-storage inet manual
    bridge_stp off
    bridge_waitport 0
    bridge_fd 0
    bridge_ports ens1f0.130
